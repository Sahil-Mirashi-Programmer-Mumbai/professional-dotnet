@model IEnumerable<ProductManagement.Models.Category>
@{
    ViewData["Title"] = "Category List";
}
@if (Model != null && Model.Any())
{
    <div class="container mt-4">
        <h2 class="mb-3">Category List</h2>
        <a asp-action="Create" class="btn btn-primary mb-3">Add New Category</a>
        <table class="table table-bordered table-striped">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center" role="alert">
        <h4 class="alert-heading">No Categories Found</h4>
        <p>There are currently no categories in the system.</p>
        <hr>
        <a asp-action="Create" class="btn btn-success">Create a New Category</a>
    </div>
}