@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-5">
    <div class="jumbotron text-center bg-light p-5 shadow-sm rounded">
        <h1 class="display-4">Welcome to Product Management</h1>
        <p class="lead">Manage categories and products with ease.</p>
        <hr class="my-4">
        <p>Use the navigation below to get started.</p>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Categories</h5>
                    <p class="card-text">Create, update, and delete product categories.</p>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Go to Categories</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Products</h5>
                    <p class="card-text">Add, edit, and manage your product inventory.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-success">Go to Products</a>
                </div>
            </div>
        </div>
    </div>

    <footer class="mt-5 text-center text-muted">
        <p>&copy; @DateTime.Now.Year Product Management System. All Rights Reserved.</p>
    </footer>
</div>